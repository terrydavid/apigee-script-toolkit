#!/bin/bash
 
#
# createApp
# creates a Developer App
#
# usage:
#   createApp app_name display_name api_product

#set -e

USAGE="app_name api_product [callback_uri]"
TOOLSDIR="${APITOOLS_HOME}"

. "$TOOLSDIR/lib/functions"
parseCommandline "$@"
checkArgs 4

APP_NAME=${ARGS[0]}
DISPLAY_NAME=${ARGS[]}
API_PRODUCT=${ARGS[1]}
CALLBACKURL=${ARGS[2]}

URL="${APIGEE_HOST}/o/${ORGANIZATION}/developers/${DEVELOPER}/apps"

BODY="{\"name\":\"${APP_NAME}\",\"apiProducts\":[\"${API_PRODUCT}\"],\"attributes\":[{\"name\":\"Developer\",\"value\":\"${DEVELOPER}\"},{\"name\":\"DisplayName\",\"value\":\"${APP_NAME}\"},{\"name\":\"Notes\",\"value\":\"\"}],\"developerEmail\":\"${DEVELOPER}\"}"

output=`curl -ns -S --basic -u "$CREDENTIALS" -X POST -H "Accept: application/json" -H "Content-Type: application/json" --data-binary "$BODY" -w "\n%{http_code}" "${URL}"`

RESPONSE=`echo "$output" | sed '$ d'`

STATUS_CODE=`echo "$output" | tail -n 1`
if [ "$STATUS_CODE" != "201" ]; then
	fail "$(basename "$0") failed with status $STATUS_CODE: $RESPONSE"
fi
debug "response is $RESPONSE"
