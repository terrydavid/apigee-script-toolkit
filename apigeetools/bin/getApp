#!/bin/bash

# getApp
#
# retrieves the specified developer app
#
# usage:
#   getApp host_alias app_name


USAGE="app_name [developer]"
TOOLSDIR="${APITOOLS_HOME}"
. "$TOOLSDIR/lib/functions"
parseCommandline "$@"
checkArgs 2

APP_NAME=${ARGS[0]}
[[ ${ARGS[1]} ]] && DEVELOPER=${ARGS[1]}

URL="${APIGEE_HOST}/o/${ORGANIZATION}/developers/${DEVELOPER}/apps/$APP_NAME"

http_get "$URL"

echo $RESPONSE
echo $STATUS_CODE
