#!/bin/bash

#
# deleteApi
# deletes an API
#
# "https://api.enterprise.apigee.com/organizations/<org>/apis/<api>/revisions/<revisions_number>/deployments?action=undeploy&env=<env>&force=true"
#
# usage:
#   deleteApi host_alias api

#set -e

USAGE="api_name revision#"
TOOLSDIR="${APITOOLS_HOME}"

. "$TOOLSDIR/lib/functions"
parseCommandline "$@"
checkArgs 0

theApi="${ARGS[0]}"
theRevision="${ARGS[1]}"

oldDEBUG=$DEBUG
#DEBUG=5 # "5" == "Real" Deletion

URL="${APIGEE_HOST}/o/${ORGANIZATION}/apis/${theApi}/revisions/${theRevision}"
debug "Deleting ${URL}"

http_delete "$URL"

echo -e "Delete Code = $DEBUG; Status Code = $STATUS_CODE"

#DEBUG=$oldDEBUG
