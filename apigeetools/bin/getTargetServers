#!/bin/bash

# getTargetServers
#
# lists the Target Servers defined for an environment
#
# usage:
#   getTargetServers environment


USAGE=""
TOOLSDIR="${APITOOLS_HOME}"
. "$TOOLSDIR/lib/functions"
parseCommandline "$@"
checkArgs 1

URL="${APIGEE_HOST}/o/${ORGANIZATION}/e/${ENVIRONMENT}/targetservers"

debug "URL= $URL"

http_get "$URL"

for a in $RESPONSE ; do printf "%b\n" $a | sed -e 's/[",\[]//g' -e 's/\]//g' ; done

