#!/bin/bash
#
# Resets Environment Vars for ORG, ENV, & DEV
#
# usage:
#   setorg <organization> <environment> <developer_email>
#
#
[[ ! ${APITOOLS_HOME} ]] && {
	echo "NO APITOOLS_HOME Dir: [$APITOOLS_HOME]"
	exit	
}
USAGE="source setorg [[[organization] environment] developer_email]"
TOOLSDIR="${APITOOLS_HOME}"
. "${APITOOLS_HOME}/lib/functions"
parseCommandline "$@"
checkArgs 1 3

[[ $DEBUG -ge 3 ]] && set -x

newOrg=$1
newEnv=$2
newDev=$3

if [ $newOrg ] ; then
	export ORGANIZATION="$newOrg"
else 
	echo "newOrg newEnv newDev  - Did you 'source || . ' me?"
fi

[ $newEnv ] && {
	export ENV="$newEnv"
	export ENVIRONMENT="$newEnv"
}

[ $newDev ] && {
        export DEVELOPER="$newDev"
}

echo "APITOOLS_HOME=	$APITOOLS_HOME"
#echo -en "PATH=		$PATH\n\n"
echo "TOOLSDIR=	$TOOLSDIR"
echo "APISDIR=	$APISDIR"
echo "DEVELOPER=	$DEVELOPER"
echo "DEBUG=		$DEBUG"
echo "FRMT=		$FRMT"

if [ -d $APITOOLS_HOME ] ; then
	echo "ORGANIZATION=	$ORGANIZATION"
	echo "ENVIRONMENT=	$ENVIRONMENT"
	echo "SCHEME=		$SCHEME"
	echo "HOST_ALIAS=	$HOST_ALIAS"
	echo "DOMAIN=		$DOMAIN"
	echo "PORT=		$PORT"
	echo "APIGEE_HOST=	$APIGEE_HOST"
	echo "MOST=		$MOST"

else
	echo "NO [$APITOOLS_HOME] Directory"
fi

source $HOME/.aliases

