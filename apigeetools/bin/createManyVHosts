#!/bin/bash

set -x

for line in `cat $1` ; do
	vhname=`echo $line | cut -f 1 -d\; -`
	env=`echo $line | cut -f 2 -d\; -`
	port=`echo $line | cut -f 3 -d\; -`
	vha=`echo $line | cut -f 4 -d\; - | sed 's/,/ /g'`
	echo "env:port:vha:  $vhname $env  $port  $vha"
	export ENVIRONMENT=$env
	export ENV=$env
	deleteVirtualHost $vhname
	if [[ "$DEBUG" == "5" ]] ; then
		createVirtualHost $vhname $port $vha
	fi
	echo "called w/$env: createVirtualHost $vhname $port $vha"
	if [[ "_$DEBUG" != "_" && "_$DEBUG" != "_5" ]] ; then
		read
	fi
done

set -
