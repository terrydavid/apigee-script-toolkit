#!/bin/bash
 
#
# createUserRole
# creates a User Role
#
# usage:
#   createUserRole host_alias role_name

#set -e

USAGE="user_email role_name"
TOOLSDIR="${APITOOLS_HOME}"

. "$TOOLSDIR/lib/functions"
parseCommandline "$@"
checkArgs 2
loadConfig "${ARGS[0]}"

USER="${ARGS[0]}"
roleName="${ARGS[1]}"
curlOPTS="-HContent-Type:application/x-www-form-urlencoded"

URL="${APIGEE_HOST}/v1/o/${ORGANIZATION}/userroles/$roleName/users?id=$USER"
#curlOPTS=" --data-urlencode{\"name\":\"${roleName}\"}"

http_post ${URL}
